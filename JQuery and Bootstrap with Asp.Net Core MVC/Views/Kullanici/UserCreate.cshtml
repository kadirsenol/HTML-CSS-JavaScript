@model KullaniciCreateVM

<div class="container">

    <div class="row">

        <form asp-action="UserCreate" method="post">

            <div class="col-4">

                <div class="form-group">
                    <label asp-for="TcNo" class="form-label">TcNo Giriniz</label>
                    <input asp-for="TcNo" value="" class="form-control" />                   
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password Giriniz</label>
                    <input asp-for="Password" type="password" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Ad" class="form-label">Ad Giriniz</label>
                    <input asp-for="Ad" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="City" class="form-label">Sehir Giriniz</label>
                    <input asp-for="City" class="form-control" />
                </div>
                <div class="form-group mt-2">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>

                <div class="form-group">
                    
                    @{
                        string basarilikayit = TempData["Basarili Kayit"] as string;
                    }
         
                        <div class="text-success">
                            @basarilikayit
                            <div asp-validation-summary="All" class="text-danger"> </div>
                        </div>
                    
                </div>
            </div>

        </form>

    </div>
 
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); //Validationun localde jquery linklerinin render edilmesi
    }
    @await Component.InvokeAsync("Notyf") @*Notyf icin js eklentisi*@
                 }